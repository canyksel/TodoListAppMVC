@model TodoList.Entities.Concrete.TaskList
@{
    ViewBag.Title = "CreateNew";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2 style="color:forestgreen">YENİ GÖREV OLUŞTUR</h2>

@using (Html.BeginForm())
{
<div class="container">
    <div class="row">
    <div class="col-lg-4">
        <img src="~/Images/add.png" class="img-responsive"  />
    </div>
    </div>

</div>

    @Html.AntiForgeryToken()
   
<div class="container-fluid">
    <div class="form-group">
        <div><h4>Görevi Oluşturan Kişi</h4></div>
        @Html.EditorFor(model => model.CreatorName, new { htmlAttributes = new { @class = "form-control", placeholder = "Boş Bırakılamaz" } })
    </div>
    <div class="form-group">
        <div><h4>Görev Açıklaması</h4></div>
        @Html.EditorFor(model => model.TaskDescription, new { htmlAttributes = new { @class = "form-control", placeholder = "Boş Bırakılamaz" } })    
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(model => model.IsComplete, new { htmlAttributes = new { @class = "form-control", placeholder = "Boş Bırakılamaz" } })
        Görev Gerçekleşti Mi ? (Evet/Hayır)
    </div>
    <div class="form-group">
        <div><h4>Görevin Oluşturulma Zamanı</h4></div>
        @Html.EditorFor(model => model.CreateTime, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control", @type = "date", placeholder = "Boş Bırakılamaz" } })      
    </div>
    <div class="form-group">
        <div><h4>Görevin Yapılması Gereken Tarih</h4></div>
        @Html.EditorFor(model => model.TaskTime, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control", @type = "date", placeholder = "Boş Bırakılamaz" } })
    </div>

    <div><button type="submit" class="btn btn-success" id="btnDelete" style="width:280px" onclick="location.href = '@Url.Action("CreateNew","TaskList")'">GÖREVİ KAYDET</button></div>
    <div>
        <br />
        <a href='@Url.Action("Index","TaskList")' class="btn btn-default" style="width:280px; text-align:center" title="Listeye geri dön">
            Listeye Geri Dön
            <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        </a>
    </div>
</div>
}


